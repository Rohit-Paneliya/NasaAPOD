<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nasa.apod">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.nasa.apod.presentation.App"
        android:allowBackup="true"
        android:icon="@drawable/nasa_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/nasa_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NasaAPOD">

        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.main.detail.MediaDetailActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NasaAPOD.TransparentStatusBar" />
    </application>

</manifest>